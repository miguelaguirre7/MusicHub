<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <com.rocatoro.musichub.utils.MSPTextViewBold
            android:id="@+id/textview_numero_venta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número Venta"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

          <com.rocatoro.musichub.utils.MSPTextViewBold
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Número Guía: "/>

            <com.rocatoro.musichub.utils.MSPTextViewBold
                android:id="@+id/textview_numero_guia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <com.rocatoro.musichub.utils.MSPTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado Transporte: "/>

            <com.rocatoro.musichub.utils.MSPTextViewBold
                android:id="@+id/textview_estado_transporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESPACHADO"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>