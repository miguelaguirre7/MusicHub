<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.rocatoro.musichub.utils.MSPTextViewBold
                android:id="@+id/textview_payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Pago"/>

            <com.rocatoro.musichub.utils.MSPTextViewBold
                android:id="@+id/textview_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Provider"/>

            <com.rocatoro.musichub.utils.MSPTextViewBold
                android:id="@+id/textview_account_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número Tarjeta"/>

            <com.rocatoro.musichub.utils.MSPTextViewBold
                android:id="@+id/textview_expiry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expiración Tarjeta"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_check"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:visibility="gone"/>
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
